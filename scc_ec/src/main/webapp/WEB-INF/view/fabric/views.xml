<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

     <!-- Default Main Template -->
    <definition name="fabric_mainTemplate" template="/WEB-INF/view/fabric/template.jsp">
    </definition>

    <!---->
    <definition name="fabric_selectCategory" extends="fabric_mainTemplate">
        <put-attribute name="main" value="/WEB-INF/view/fabric/fabricSelectCategory.jsp"></put-attribute>
        <put-list-attribute name="script"> </put-list-attribute>
    </definition>

    <!---->
    <definition name="fabric_fillContent" extends="fabric_mainTemplate">
        <put-attribute name="header" value="/WEB-INF/view/fabric/header.jsp"></put-attribute>
        <put-attribute name="main" value="/WEB-INF/view/fabric/fabricFillContent.jsp"></put-attribute>
        <put-list-attribute name="script"> </put-list-attribute>
    </definition>

    <!--我发布的面料列表-->
    <definition name="fabric_list" extends="fabric_mainTemplate">
        <put-attribute name="header" value="/WEB-INF/view/fabric/header.jsp"></put-attribute>
        <put-attribute name="menu" value="/WEB-INF/view/fabric/menu.jsp"></put-attribute>
        <put-attribute name="main" value="/WEB-INF/view/fabric/itemList.jsp"></put-attribute>
        <put-attribute name="newItem" value="/WEB-INF/view/fabric/newItem.jsp"></put-attribute>
        <put-attribute name="footer" value="/WEB-INF/view/fabric/footer.jsp"></put-attribute>
        <put-list-attribute name="script">
            <add-attribute value="/resources/js/demandOrderList.js"></add-attribute>
        </put-list-attribute>
    </definition>

    <!---->
    <definition name="fabric_view" extends="fabric_mainTemplate">
        <put-attribute name="main" value="/WEB-INF/view/fabric/fabricView.jsp"></put-attribute>
        <put-list-attribute name="script">
            <add-attribute value="/resources/js/fabric/fabricView.js"></add-attribute>
        </put-list-attribute>
    </definition>

    <!--收藏的商品-->
    <definition name="favouriteList" extends="fabric_mainTemplate">
        <put-attribute name="main" value="/WEB-INF/view/favouriteItemList.jsp"></put-attribute>
        <put-list-attribute name="script"> </put-list-attribute>
    </definition>

    <!--收藏的店铺-->
    <definition name="favouriteShopList" extends="fabric_mainTemplate">
        <put-attribute name="main" value="/WEB-INF/view/favouriteShopList.jsp"></put-attribute>
        <put-list-attribute name="script"> </put-list-attribute>
    </definition>

</tiles-definitions>